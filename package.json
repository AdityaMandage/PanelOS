{
  "name": "panelos",
  "version": "1.0.0",
  "description": "Lightweight Linux System Management Dashboard",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "./run-server.sh",
    "start:direct": "node --trace-warnings server.js",
    "start:pm2": "pm2 start ecosystem.config.cjs",
    "start:pm2:prod": "pm2 start ecosystem.config.cjs --env production",
    "dev": "nodemon --signal SIGTERM server.js",
    "stop": "pkill -f 'node.*server.js' || echo 'No server processes found'",
    "stop:pm2": "pm2 stop panelos || true",
    "restart": "npm run stop && sleep 2 && npm start",
    "restart:pm2": "pm2 restart panelos",
    "pm2:status": "pm2 status",
    "pm2:logs": "pm2 logs panelos",
    "pm2:kill": "pm2 kill",
    "lint": "eslint .",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "raspberry-pi",
    "dashboard",
    "ssh",
    "monitoring",
    "terminal"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "helmet": "^7.1.0",
    "node-pty": "^0.10.1",
    "socket.io": "^4.6.1",
    "ssh2": "^1.14.0",
    "systeminformation": "^5.21.20",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2"
  }
}
